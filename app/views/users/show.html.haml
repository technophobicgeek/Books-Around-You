%section.round
  %table.profile{:summary => "Profile information"}
    %tr
      %td.main
        %h1
          = gravatar_for @user
          = @user.name
      %td.sidebar.round
        %strong URL
        = link_to user_path(@user), @user
        %br/
        %strong Lent
        %br/
        %strong Borrowed
        %br/
        %strong Ratings
        

%section.round
  %ul.book_list
    - @books.each do |b|
      %li.book_container
        .book_node
          .book_name= b.title
  = will_paginate @books
