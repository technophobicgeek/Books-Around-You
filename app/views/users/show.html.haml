%section.round
  %table.profile{:summary => "Profile information"}
    %tr
      %td.main
        %h1
          = gravatar_for @user
          = @user.name
      %td.sidebar.round
        %strong Lent
        %br/
        %strong Borrowed
        %br/
        %strong Ratings
        

%section.round
  .book_list
    - @books.each do |b|
      .book
        .book_image= image_tag(b.image_url || default_image_url)
        .book_details
          .book_title= b.title
  = will_paginate @books
